include ${HOME}/src/etc/makefile.${GAPSPLATFORM}
include ${HOME}/src/etc/${DB}/makefile.${DB}
##########################################################################
DATE=`date +"%Y%m%d%H%M"`
BUILDDATETIME=$(DATE)
RELEASE_VERSION=4.0.0
LIBDIR=${HOME}/lib
SHLIBDIR=${HOME}/shlib
BINDIR=${HOME}/bin
LIBINCL=${HOME}/libincl
INCL=${HOME}/incl

DEBUG=${MOS} -DBUILDDATETIME=\"$(BUILDDATETIME)\"
CC=cc ${OS_CCFLAG}

VPATH=.libs
all :PLDSDF_FILE.so CCXT_FILE.so
.SUFFIXES:  .c .lo

.c.lo:
	libtool --mode=compile --tag=CC ${CC} -g -O ${DEBUG} ${DBS} ${MOS} ${DB_CCFLAGS} ${CCFLAG} -I$(LIBINCL) -I${INCL} -c $<

install:
	install-shlib.sh PLDSDF_FILE.la   ${SHLIBDIR}
	install-shlib.sh CCXT_FILE.la   ${SHLIBDIR}

uninstall: 
	libtool --mode=uninstall /bin/rm ${SHLIBDIR}/PLDSDF_FILE.so ${SHLIBDIR}/PLDSDF_FILE-*.so
	libtool --mode=uninstall /bin/rm ${SHLIBDIR}/CCXT_FILE.so ${SHLIBDIR}/CCXT_FILE-*.so

PLDSDF_FILE.so: PLDSDF_FILE.lo ${HOME}/app/esb/comp/DRCESB_MD5.lo
	libtool --mode=link --tag=CC ${CC} ${LDFLAG}  -g -O -o $(@:.so=.la) $? -rpath ${SHLIBDIR}  -release ${RELEASE_VERSION} -export-dynamic -no-undefined -module -L${LIBDIR} -L${SHLIBDIR} ${DB_LIBS} ${APPLIBDIR} -lsha -lsxml -lhsbase -lgapssfs -lgapssql -ldci -lc
	install-shlib.sh PLDSDF_FILE.la   ${SHLIBDIR} upd
CCXT_FILE.so: CCXT_FILE.lo ${HOME}/app/esb/comp/DRCESB_MD5.lo
	libtool --mode=link --tag=CC ${CC} ${LDFLAG}  -g -O -o $(@:.so=.la) $? -rpath ${SHLIBDIR}  -release ${RELEASE_VERSION} -export-dynamic -no-undefined -module -L${LIBDIR} -L${SHLIBDIR} ${DB_LIBS} ${APPLIBDIR} -lsha -lsxml -lhsbase -lgapssfs -lgapssql -ldci -lc
	install-shlib.sh CCXT_FILE.la ${SHLIBDIR} upd
	make clean


clean:
	@rm -f lib*.a *~ *core *.lo *.o *.la *.lis tp*
	@rm -rf .libs
cleantp:
	@rm -f tp*
##########################################################################
